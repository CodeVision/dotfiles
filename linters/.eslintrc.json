{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "jasmine": true
  },
  "plugins": [
    "json",
    "be-consistent"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "no-cond-assign": 0,
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "[dD]ummy"
      }
    ],
    "indent": [
      2,
      2,
      {
        "ArrayExpression": "first",
        "CallExpression": { "arguments": "first" },
        "FunctionDeclaration": { "parameters": "first" },
        "MemberExpression": 1,
        "SwitchCase": 1,
        "VariableDeclarator": { "var": 2, "let": 2, "const": 2 }
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "be-consistent/quotes": 2
  }
}
